extends ./base

html
	head
		title : title
		block extrajs
			script(src='aufgabentypen/add1.js')

block content
	//div.log-in-form
	div#user #{user}
	div#aufgabe #{aufgabe}
	div.grid-container
		div(class="grid-x  grid-margin-y grid-margin-x grid-padding-y grid-padding-x")
			div(class="cell small-6  text-left" id="name")
					span#firstname #{firstname}
					span#lastname &nbsp; #{lastname}
					span#klasse &nbsp; #{klasse}
			div(class="cell small-6  text-right")
				span Aufgabe:&nbsp;
				span#aktAufgabe
				span /
				span#anzahlAufgaben
			div(class="cell small-4 callout text-right lead")
				p#rel1
			div(class="cell small-4 callout text-center lead")
				p#operator
			div(class="cell small-4 callout text-left lead")
				p#rel2
			div(class="cell small-12 callout")
				input(type="text"  style="text-align:center ; font-size:28px ; padding:8px ; height:50px" id="result" name="result" autofocus autocomplete="off")
			div(class="button large success   cell small-12 " id="btn_speichern" onclick="speichern()") Lösung speichern
			div(class="button large secondary cell auto disabled" id="btn_zurueck" onclick="zurueck()") Zurück
			div(class="button large secondary cell auto" id="btn_weiter" name="btn_weiter" onclick="weiter()") Weiter
			div(class="button large success   cell small-12 disabled" id="btn_abgeben" onclick="loesung_abgeben()") Lösung abgeben
